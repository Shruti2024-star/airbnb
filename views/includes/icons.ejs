<div id="filters" class="container-fluid py-2">
    <div class="row align-items-center flex-nowrap overflow-hidden">
      
      <div class="col d-flex align-items-center overflow-auto flex-nowrap no-scrollbar">
        <div class="d-flex flex-nowrap">
          
          <div class="filter me-3 <%= currentCategory === 'Trending' ? 'highlight' : '' %>">
            <a href="/listings/icon/Trending">
              <i class="fa-solid fa-fire"></i>
              <p>Trending</p>
            </a>
          </div>
          <div class="filter me-3 <%= currentCategory === 'Boats' ? 'highlight' : '' %>">
            <a href="/listings/icon/Boats">
              <i class="fa-solid fa-sailboat"></i>
              <p>Boats</p>
            </a>
          </div>
          <div class="filter me-3 <%= currentCategory === 'Camping' ? 'highlight' : '' %>">
            <a href="/listings/icon/Camping">
              <i class="fa-solid fa-tents"></i>
              <p>Camping</p>
            </a>
          </div>
          <div class="filter me-3 <%= currentCategory === 'CreativeSpacing' ? 'highlight' : '' %>">
            <a href="/listings/icon/CreativeSpacing">
              <i class="fa-solid fa-palette"></i>
              <p>Creative Spacing</p>
            </a>
          </div>
          <div class="filter me-3 <%= currentCategory === 'Vineyards' ? 'highlight' : '' %>">
            <a href="/listings/icon/Vineyards">
              <i class="fa-solid fa-wine-glass"></i>
              <p>Vineyards</p>
            </a>
          </div>
          <div class="filter me-3 <%= currentCategory === 'Beachfront' ? 'highlight' : '' %>">
            <a href="/listings/icon/Beachfront">
              <i class="fa-solid fa-umbrella-beach"></i>
              <p>Beach Front</p>
            </a>
          </div>
          <div class="filter me-3 <%= currentCategory === 'AmazingPools' ? 'highlight' : '' %>">
            <a href="/listings/icon/AmazingPools">
              <i class="fa-solid fa-person-swimming"></i>
              <p>Amazing Pools</p>
            </a>
          </div>
          <div class="filter me-3 <%= currentCategory === 'Lake' ? 'highlight' : '' %>">
            <a href="/listings/icon/Lake">
              <i class="fa-solid fa-water"></i>
              <p>Lake</p>
            </a>
          </div>
          <div class="filter me-3 <%= currentCategory === 'Arctic' ? 'highlight' : '' %>">
            <a href="/listings/icon/Arctic">
              <i class="fa-solid fa-snowflake"></i>
              <p>Arctic</p>
            </a>
          </div>
          <div class="filter me-3 <%= currentCategory === 'Golfing' ? 'highlight' : '' %>">
            <a href="/listings/icon/Golfing">
              <i class="fa-solid fa-golf-ball-tee"></i>
              <p>Golfing</p>
            </a>
          </div>
        </div>
      </div>
  
      
      <div class="tax-toggle">
        <div class="form-check form-switch w-100">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after tax</label>
          <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        </div>
      </div>
      
    </div>
  </div>
  